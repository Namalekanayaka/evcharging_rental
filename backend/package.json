{
  "name": "evcharging-rental-backend",
  "version": "1.0.0",
  "description": "Backend for EV Charger Rental Platform - Peer-to-Peer EV charging marketplace",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "lint": "eslint src --fix",
    "db:migrate": "node database/migrations/run.js",
    "db:seed": "node database/seeds/run.js",
    "docker:build": "docker build -t evcharging-backend .",
    "docker:run": "docker run -d -p 5000:5000 --env-file .env evcharging-backend"
  },
  "keywords": [
    "ev-charging",
    "rental",
    "peer-to-peer",
    "airbnb-for-charging"
  ],
  "author": "EV Charging Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.1.2",
    "pg": "^8.11.2",
    "pg-promise": "^11.5.0",
    "uuid": "^9.0.1",
    "nodemailer": "^6.9.7",
    "firebase-admin": "^12.0.0",
    "axios": "^1.6.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
